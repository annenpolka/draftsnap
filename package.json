{
  "name": "draftsnap-node",
  "version": "0.5.0",
  "type": "module",
  "description": "Node.js rewrite of the draftsnap CLI",
  "bin": {
    "draftsnap": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "biome check src tests/node",
    "lint:fix": "biome check --write src tests/node",
    "format": "biome format --write src tests/node",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run build && publint"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "keywords": [
    "cli",
    "git",
    "draftsnap",
    "scratch"
  ],
  "license": "MIT",
  "dependencies": {
    "cac": "^6.7.14",
    "chokidar": "^5.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@types/node": "^24.7.2",
    "publint": "^0.3.14",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
